<body style="background-color: black; color: aliceblue;">
<nav>
    <select id="menu">
        <option selected = "selected">Menu</option>
    </select>
    <form id="form">

        <select id = "kateg">
            <option selected="selected">All</option>
            <option>Comedy</option>
            <option>Drama</option>
            <option>Horror</option>
            <option>Fantasy</option>
            <option>Action</option>
            <option>Thriller</option>
            <option>Sci-fi</option>
            <option>Sport</option>
        </select>
        <input id="keres" type="text" placeholder="search" size="60"/>
        <a href="/" class="reg">Home</a>
        <a class="reg">Sign in</a>
    </form>

</nav>
<div>
    <h2>Current Films</h2>
    <table>
        <thead>
        <tr>
            <th></th>
            <th>Film Title</th>
            <th>Release Date</th>
            <th>Edit</th>
            <th style="padding-left: 5%;">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% for (const film of films) { %>
            <tr>
                <td style="width:200px"><p style="text-align: center"> <img style="padding-left: 20%; height: 150px; " src="<%= film.kep %>" alt="Placeholder" class="center" /> </p></td>
                <td style="width:800px"><a  href="/viewFilm/<%= film.id %>"><%= film.cim %></a></td>
                <td style="width:200px"><%= film.megjelenes %></td>
                <!--<td><a  href="/view/<%= film.id %>">Film Adatai</a></td>-->

                <%  %>
                <!--% if(data[0].adm === 1){ %>-->
                <td><a  href="/editFilm/<%= film.id %>">Edit the Film</a></td>
                <td style="padding-left: 5%"><button data-toggle="modal" data-target="#modal-toTrash<%= film.id %>" class="btn-sm btn-dark details">Delete
                        <span class="glyphicon glyphicon-trash" data-toggle="tooltip"
                              data-placement="top" title="Sent to Trash Box"></span></button>
                </td>
                <!--% } %>-->
                <%  %>

                <div class="modal modal-toTrash" id="modal-toTrash<%= film.id %>">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">Ã—
                                </button>
                            </div>
                            <div class="modal-body">
                                <p style="color: black;" class="error-text"><strong>Are you sure about deleting the film titled: <br><%= film.cim %> ? </strong></p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn-sm btn-dark details" data-dismiss="modal" aria-hidden="true">
                                    Cancel
                                </button>
                                <form action="/deleteFilm/<%= film.id %>" method="post">
                                    <button class="btn-sm btn-dark details" value="delete">Yes</button></a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<br>
<div>
    <h2>Dont see a film on the list?</h2>

    <form action="/createFilm">
        <input id="gomb" type="submit" value="Add a Film!" />
    </form>
    <br><br><br>
    <div class="cont_link">
        <a href="/contact">Contact Us!</a>
    </div>
</div>
</body>


