<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Filmek</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/awards.css">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
</head>
<body>
    <h1>Awards üèÜ</h1>
    <nav>
        <div class="menu-box csoport">
            <select id="menu" class="menu-class">
                <option selected = "selected">Menu</option>
            </select>
        </div>

        <div class="search-box csoport">
            <input id="searchBar" type="text" placeholder="Search..">
            <form>
                <select id="kateg">
                    <option selected = "selected">genres</option>
                    <option>Action</option>
                    <option>Comedy</option>
                    <option>Drama</option>
                    <option>Fantasy</option>
                    <option>Horror</option>
                    <option>Sci-fi</option>
                    <option>Sport</option>
                    <option>Thriller</option>
                </select>
            </form>
        </div>

        <div class="signin-box csoport">
            <a href="/">Films</a>
            <a class="active" href="/awards" >Awards</a>
            <a href="/genres">Genres</a>
            <a href="/actors">Actors</a>
        </div>
    </nav>

    <table>
        <thead>
            <tr>
               <th>Name</th>
               <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < awards.length; i++) { %>
                <tr>
                    <td><%= awards[i].nev %></td>
                    <td><%= awards[i].leiras %></td>
                    <td class="icon icons"><a href="/awards-update/<%= awards[i].id %>">‚úè</a></td>
                    <td class="icon icons" onclick="deleteAward(<%= awards[i].id %>)">üóë</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Javascript Call -->
    <script>
        function deleteAward(awardId) {
            console.log(`Deleting Award WHERE id=${awardId}`);

            // Ajax Routine
            axios.delete(`http://localhost:3001/awards/${awardId}`)
                .then((res) => {
                    console.log(res.data.message);
                    $(`#${res.data.id}`).remove();
                }).catch((res) => {
                console.log('Something bad happend..:(!');
                console.log(res.response.data);
            })
        }
    </script>
</body>
</html>