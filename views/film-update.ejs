<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Filmek</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/update.css">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<body>
<h1>Update Films</h1>
<nav>
    <div class="menu-box csoport">
        <select id="menu" class="menu-class">
            <option selected = "selected">Menu</option>
        </select>
    </div>

    <div class="search-box csoport">
        <input id="searchBar" type="text" placeholder="Search..">
        <form>
            <select id="kateg">
                <option selected = "selected">genres</option>
                <option>Action</option>
                <option>Comedy</option>
                <option>Drama</option>
                <option>Fantasy</option>
                <option>Horror</option>
                <option>Sci-fi</option>
                <option>Sport</option>
                <option>Thriller</option>
            </select>
        </form>
    </div>

    <div class="signin-box csoport">
        <a href="/">Films</a>
        <a href="/awards" >Awards</a>
        <a href="/genres">Genres</a>
        <a href="/actors">Actors</a>
    </div>
</nav>


<main>
        <form>
            <label>
                <span>Title:</span>
                <input class="title" type="text" value="<%= film.cim %>" />
            </label>
            <label>
                <span>Release:</span>
                <input class="release" type="text" value="<%= film.megjelenes.toLocaleDateString('en-ZA') %>" />
            </label>
            <label>
                <span>Score:</span>
                <input class="score" type="text" value="<%= film.ertekeles %>" />
            </label>
            <label>
                <span>Duration:</span>
                <input class="duration" type="text" value="<%= film.hossz %>" />
            </label>

            <div class="button-container">
                <button onclick="updateFilm(<%= film.id %>)">âœ”</button>
                <button><a href="/genres">x</a></button>
            </div>
        </form>

    <script>
        function updateFilm(id) {
            let updatedFilm = {
                id,
                cim: $('.title').val(),
                megjelenes: $('.release').val(),
                ertekeles: $('.score').val(),
                hossz: $('.duration').val(),
            }

            axios.post(`http://localhost:3001/film-update`, {updatedFilm})
                .then(()=>{
                    window.location.href = "/";
                }).catch((response)=> {
                console.log(response)
            })
        }
    </script>
<!--    </form>-->
</main>

</body>
</html>