<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Filmek</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/update.css">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<body>
<h1>Update Films</h1>
<nav></nav>
<main>
        <form>
            <label>
                <span>Title:</span>
                <input class="title" type="text" value="<%= film.cim %>" />
            </label>
            <label>
                <span>Release:</span>
                <input class="release" type="text" value="<%= film.megjelenes.toLocaleDateString('en-ZA') %>" />
            </label>
            <label>
                <span>Score:</span>
                <input class="score" type="text" value="<%= film.ertekeles %>" />
            </label>
            <label>
                <span>Duration:</span>
                <input class="duration" type="text" value="<%= film.hossz %>" />
            </label>

            <div class="button-container">
                <button onclick="updateFilm(<%= film.id %>)">âœ”</button>
                <button><a href="/">x</a></button>
            </div>
        </form>

    <script>
        function updateFilm(id) {
            let updatedFilm = {
                id,
                cim: $('.title').val(),
                megjelenes: $('.release').val(),
                ertekeles: $('.score').val(),
                hossz: $('.duration').val(),
            }

            axios.post(`http://localhost:3001/film-update`, {updatedFilm})
                .then(() => {
                    alert('Film update ok!')
                }).catch((response) => {
                console.log(response)
            });
        }
    </script>
<!--    </form>-->
</main>

</body>
</html>