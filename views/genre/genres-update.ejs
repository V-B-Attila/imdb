<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Filmek</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/update.css">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>
<body>
<h1>Update Genres</h1>
<nav></nav>
<main>
        <form>
            <label>
                Name:
                <input class="genre-name" type="text" value="<%= genre.nev %>" />
            </label>

            <div class="button-container">
                <button onclick="updateGenre(<%= genre.id %>)">âœ”</button>
                <button><a href="/genres">x</a></button>
            </div>
        </form>

    <script>
        function updateGenre(id) {
            let nev = $('.genre-name').val();
            axios.post(`http://localhost:3001/genres-update`, {genre: {id, nev}})
                .then(() => {
                    alert('Genre update ok!')
                }).catch((response) => {
                console.log(response)
            });
        }
    </script>
